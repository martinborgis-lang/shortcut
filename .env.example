# =============================================================================
# SHORTCUT APPLICATION - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/shortcut

# =============================================================================
# REDIS CONFIGURATION (Cache & Message Broker)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION (CLERK)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# =============================================================================
# AWS S3 STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=shortcut-storage

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# AI SERVICES
# =============================================================================
# Deepgram for transcription
DEEPGRAM_API_KEY=your_deepgram_api_key

# Anthropic Claude for AI analysis
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# SOCIAL MEDIA APIS
# =============================================================================
# TikTok API
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# YouTube Data API
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Twitter API v2
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development
DEBUG=true

# Secret key for JWT and session management
SECRET_KEY=your_super_secret_key_change_in_production

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
# Maximum file size in bytes (1GB = 1073741824)
MAX_FILE_SIZE=1073741824

# Allowed video file extensions (comma-separated)
ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv,.webm

# =============================================================================
# CELERY WORKER CONFIGURATION
# =============================================================================
# Celery broker URL (same as REDIS_URL)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourapp.com

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limit per minute for API endpoints
RATE_LIMIT_PER_MINUTE=60

# Rate limit per hour for video uploads
UPLOAD_RATE_LIMIT_PER_HOUR=10